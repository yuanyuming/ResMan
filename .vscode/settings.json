{
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/man/bin/python",
    "python.testing.pytestArgs": [
        "unit_test",
        "-s"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "cSpell.language": "en,en-US",
    "files.autoSave": "onFocusChange",
    "python.terminal.launchArgs": [
    
    ],
    "cSpell.words": [
        "arange",
        "dtype",
        "matplotlib",
        "ndarray",
        "pettingzoo",
        "pyplot"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "dictCompletion.addSpaceAfterCompletion": false,
    "python.linting.cwd": "${workspaceFolder}",
    "python.linting.pylintPath": "${workspaceFolder}/man/bin/pylint",
    "AREPL.pythonPath": "${workspaceFolder}/man/bin/python",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.callArgumentNames": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.languageServer": "Pylance",
    "python.linting.pylintEnabled": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "python.formatting.provider": "black",
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}"
    ],
}
