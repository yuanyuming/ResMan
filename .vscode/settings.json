{
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/man/bin/python",
    "python.testing.pytestArgs": [
        "unit_test",
        "-s"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "cSpell.language": "en,en-US",
    "files.autoSave": "onFocusChange",
    "python.terminal.launchArgs": [],
    "cSpell.words": [
        "arange",
        "dtype",
        "matplotlib",
        "ndarray",
        "pettingzoo",
        "pyplot"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "dictCompletion.addSpaceAfterCompletion": false,
    "python.linting.cwd": "${workspaceFolder}",
    "python.linting.pylintPath": "${workspaceFolder}/man/bin/pylint",
    "AREPL.pythonPath": "${workspaceFolder}/man/bin/python",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.extraPaths": [
        "./environment",
        "./tianshou_drl"
    ],
    "python.analysis.inlayHints.callArgumentNames": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.languageServer": "Pylance",
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "black-formatter.importStrategy": "fromEnvironment",
    "bookmarks.useWorkaroundForFormatters": true,
    "python.formatting.blackPath": "${workspaceFolder}/man/bin/black",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.cursorStyle": "line",
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.defaultColorDecorators": true,
    "editor.experimental.asyncTokenization": true,
    "editor.experimental.asyncTokenizationLogging": false,
    "editor.experimental.asyncTokenizationVerification": false,
    "editor.experimental.pasteActions.enabled": true,
    "editor.inlayHints.padding": false,
    "editor.lineNumbers": "on",
    "editor.scrollbar.verticalScrollbarSize": 6,
    "editor.stickyScroll.enabled": true,
    "diffEditor.codeLens": true,
    "diffEditor.diffAlgorithm": "advanced",
    "editor.minimap.autohide": false,
    "editor.minimap.maxColumn": 60,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.size": "fit",
    "editor.suggest.localityBonus": true,
    "editor.suggest.preview": false,
    "editor.suggest.showDeprecated": false,
    "editor.suggest.shareSuggestSelections": true,
    "files.autoGuessEncoding": true,
    "files.insertFinalNewline": true,
    "workbench.editor.sharedViewState": true,
    "window.autoDetectColorScheme": true,
    "workbench.colorTheme": "GitHub Light",
    "workbench.preferredDarkColorTheme": "GitHub Dark",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "search.experimental.notebookSearch": true,
    "search.seedWithNearestWord": true,
    "search.smartCase": true,
    "debug.autoExpandLazyVariables": true,
    "debug.showSubSessionsInToolBar": true,
    "debug.toolBarLocation": "floating",
    "terminal.integrated.copyOnSelection": true,
    "problems.showCurrentInStatus": true,
    "typewriterAutoScroll.enable": false,
    "remote.downloadExtensionsLocally": true,
    "remote.localPortHost": "allInterfaces",
    "timeline.pageOnScroll": true,
    "notebook.consolidatedRunButton": true,
    "notebook.outline.showCodeCells": true,
    "application.experimental.rendererProfiling": false,
    "ipynb.pasteImagesAsAttachments.enabled": true,
    "AllAutocomplete.updateOnlyOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "git.autofetch": true,
    "git.autoStash": true,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.followTagsWhenSync": true,
    "git.pruneOnFetch": false,
    "python.testing.pytestPath": "${workspaceFolder}/man/bin/pytest",
    "python.analysis.enableSyncServer": true,
    "python.analysis.pylanceLspClientEnabled": false,
    "black-formatter.path": [
        "${workspaceFolder}/man/bin/black"
    ],
    "black-formatter.interpreter": [
        "${workspaceFolder}/man/bin/python"
    ],
    "python.analysis.userFileIndexingLimit": -1,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
